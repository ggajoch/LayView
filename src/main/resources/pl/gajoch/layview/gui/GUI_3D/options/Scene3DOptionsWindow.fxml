<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<Pane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" xmlns="http://javafx.com/javafx/8"
      fx:controller="pl.gajoch.layview.gui.GUI_3D.options.Scene3DOptionsController">
    <children>
        <VBox>
            <children>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                        <ColumnConstraints hgrow="SOMETIMES"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Tip length:"/>
                        <TextField fx:id="tipLen" prefHeight="25.0" prefWidth="72.0" GridPane.columnIndex="1">
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </GridPane.margin>
                        </TextField>
                        <TextField fx:id="tipRadius" prefWidth="52.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </GridPane.margin>
                        </TextField>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tip radius:" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets right="30.0"/>
                            </GridPane.margin>
                        </Text>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Radius:" GridPane.rowIndex="2"/>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Length scale:" GridPane.rowIndex="3"/>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Global scale:" GridPane.rowIndex="4"/>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="FPS:" GridPane.rowIndex="5"/>
                        <TextField fx:id="radius" prefHeight="25.0" prefWidth="52.0" GridPane.columnIndex="1"
                                   GridPane.rowIndex="2">
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </GridPane.margin>
                        </TextField>
                        <TextField fx:id="lenScale" prefHeight="25.0" prefWidth="52.0" GridPane.columnIndex="1"
                                   GridPane.rowIndex="3">
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </GridPane.margin>
                        </TextField>
                        <TextField fx:id="globalScale" prefHeight="25.0" prefWidth="52.0" GridPane.columnIndex="1"
                                   GridPane.rowIndex="4">
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </GridPane.margin>
                        </TextField>
                        <TextField fx:id="FPS" prefHeight="25.0" prefWidth="52.0" GridPane.columnIndex="1"
                                   GridPane.rowIndex="5">
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </GridPane.margin>
                        </TextField>
                        <Button fx:id="Gradient1" alignment="CENTER_RIGHT" contentDisplay="RIGHT"
                                mnemonicParsing="false" text="Gradient 1" textAlignment="CENTER" GridPane.rowIndex="7"/>
                        <HBox GridPane.columnIndex="1" GridPane.rowIndex="7">
                            <children>
                                <Button fx:id="Gradient2" alignment="CENTER" contentDisplay="CENTER"
                                        mnemonicParsing="false" text="Gradient 2" textAlignment="CENTER"/>
                                <CheckBox fx:id="Grad2Enable" mnemonicParsing="false" textAlignment="CENTER">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" top="5.0"/>
                                    </HBox.margin>
                                </CheckBox>
                            </children>
                        </HBox>
                        <Label text="Vectors?" GridPane.rowIndex="6"/>
                        <CheckBox fx:id="isVectorsCheckBox" alignment="CENTER" mnemonicParsing="false"
                                  textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="6">
                            <GridPane.margin>
                                <Insets left="40.0"/>
                            </GridPane.margin>
                        </CheckBox>
                    </children>
                </GridPane>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false"
                                onAction="#cancel_click" text="Cancel" GridPane.halignment="CENTER"
                                GridPane.valignment="CENTER">
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </GridPane.margin>
                        </Button>
                        <Button fx:id="okButton" defaultButton="true" mnemonicParsing="false" onAction="#ok_click"
                                text="OK" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                                GridPane.valignment="CENTER"/>
                    </children>
                </GridPane>
            </children>
        </VBox>
    </children>
</Pane>
