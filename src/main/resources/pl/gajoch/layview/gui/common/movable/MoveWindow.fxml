<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<Pane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" xmlns="http://javafx.com/javafx/8"
      fx:controller="pl.gajoch.layview.gui.common.movable.MoveWindowController">
    <children>
        <VBox>
            <children>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                        <ColumnConstraints hgrow="SOMETIMES"/>
                        <ColumnConstraints hgrow="SOMETIMES"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Size:"/>
                        <TextField prefHeight="25.0" prefWidth="72.0" GridPane.columnIndex="1" fx:id="xSize">
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </GridPane.margin>
                        </TextField>
                        <TextField fx:id="ySize" prefHeight="25.0" prefWidth="72.0" GridPane.columnIndex="2">
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </GridPane.margin>
                        </TextField>
                        <TextField prefHeight="25.0" prefWidth="52.0" GridPane.columnIndex="1" GridPane.rowIndex="1"
                                   fx:id="xOffset">
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </GridPane.margin>
                        </TextField>
                        <TextField fx:id="yOffset" prefHeight="25.0" prefWidth="52.0" GridPane.columnIndex="2"
                                   GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </GridPane.margin>
                        </TextField>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Position:" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets right="30.0"/>
                            </GridPane.margin>
                        </Text>
                    </children>
                </GridPane>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false"
                                onAction="#cancel_click" text="Cancel" GridPane.halignment="CENTER"
                                GridPane.valignment="CENTER"/>
                        <Button fx:id="okButton" defaultButton="true" mnemonicParsing="false" onAction="#ok_click"
                                text="OK" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                                GridPane.valignment="CENTER"/>
                    </children>
                </GridPane>
            </children>
        </VBox>
    </children>
</Pane>
